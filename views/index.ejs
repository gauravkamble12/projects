<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>YouTube Style App</title>

<style>
body {
    margin: 0;
    font-family: Arial, sans-serif;
    background: #0f0f0f;
    color: #fff;
}

header {
    padding: 15px;
    background: #212121;
    display: flex;
    justify-content: center;
}

form {
    display: flex;
    width: 60%;
}

input {
    flex: 1;
    padding: 10px;
    font-size: 16px;
    border: none;
    outline: none;
}

button {
    padding: 10px 20px;
    background: #cc0000;
    color: #fff;
    border: none;
    cursor: pointer;
}

.grid {
    padding: 20px;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
}

.card {
    cursor: pointer;
}

.card img {
    width: 100%;
    border-radius: 10px;
}

.title {
    margin-top: 8px;
    font-size: 14px;
}

/* PLAYER */
.player {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.85);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 999;
}

.player iframe {
    width: 70%;
    height: 70%;
}

.player.mini {
    width: 320px;
    height: 180px;
    inset: auto 20px 20px auto;
    background: #000;
}

.player.mini iframe {
    width: 100%;
    height: 100%;
}

.close {
    position: absolute;
    top: 15px;
    right: 25px;
    font-size: 28px;
    cursor: pointer;
}
</style>
</head>

<body>

<header>
    <form id="searchForm">
        <input id="searchInput" placeholder="Search YouTube">
        <button>Search</button>
    </form>
</header>

<div class="grid" id="grid">
    <% videos.forEach(v => { %>
        <div class="card" onclick="playVideo('<%= v.id %>')">
            <img src="<%= v.thumbnail %>">
            <div class="title"><%= v.title %></div>
        </div>
    <% }) %>
</div>

<div class="player" id="player">
    <span class="close" onclick="minimize()">âœ–</span>
    <iframe id="iframe" frameborder="0" allowfullscreen></iframe>
</div>

<script>
const form = document.getElementById('searchForm');
const grid = document.getElementById('grid');
const player = document.getElementById('player');
const iframe = document.getElementById('iframe');

form.addEventListener('submit', async e => {
    e.preventDefault();
    const q = searchInput.value;
    const res = await fetch(`/search?q=${q}`);
    const videos = await res.json();

    grid.innerHTML = '';
    videos.forEach(v => {
        grid.innerHTML += `
            <div class="card" onclick="playVideo('${v.id}')">
                <img src="${v.thumbnail}">
                <div class="title">${v.title}</div>
            </div>
        `;
    });
});

function playVideo(id) {
    iframe.src = `https://www.youtube.com/embed/${id}?autoplay=1`;
    player.style.display = 'flex';
    player.classList.remove('mini');
}

function minimize() {
    player.classList.add('mini');
}
</script>

</body>
</html>
